{
  "name": "hn-api",
  "version": "1.0.0",
  "description": "Hacker News API using GraphQL",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "start:dev": "NODE_ENV=dev npm run start",
    "start:docker": "docker run rodrigogarcialeon/hn-api --env NODE_ENV=dev",
    "debug": "NODE_OPTIONS=--inspect-brk NODE_ENV=dev node src/server.js",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "eslint .",
    "format:eslint": "eslint --fix .",
    "lint:prettier": "prettier --check '**/*.js'",
    "format:prettier": "prettier --write '**/*.js'",
    "build": "docker build -t rodrigogarcialeon/hn-api .",
    "push": "docker push rodrigogarcialeon/hn-api",
    "release": "npm run build && npm run push"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "graphql": "^14.5.8",
    "koa": "^2.11.0",
    "koa-graphql": "^0.8.0",
    "koa-mount": "^4.0.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1"
  }
}
